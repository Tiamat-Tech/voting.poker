{
  "name": "voting.poker",
  "private": true,
  "scripts": {
    "next:dev": "yarn --cwd apps/next.voting dev",
    "core:dev": "yarn --cwd packages/core dev",
    "dev": "npm-run-all --parallel core:dev next:dev"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.json": [
      "jsonlint -i"
    ]
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
